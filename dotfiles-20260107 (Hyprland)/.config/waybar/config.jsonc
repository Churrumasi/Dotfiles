{
  "position": "bottom",
  "height": 26,
  "spacing": 6,

  "modules-left": [
    "custom/arch",
    "hyprland/workspaces"
    ],

  "modules-center": [
     "hyprland/window"
      ],

"modules-right": [
  "tray",
  "custom/cliphist",
  "clock",
  "pulseaudio",
  "battery",
  "custom/power"
],

"clock": {
  "format": "{:%H:%M}",
  "format-alt": "{:%A %d %B, %Y}",
  "tooltip-format": "<big>{:%A, %d %B %Y}</big>\n<tt><small>{calendar}</small></tt>"
},


  "tray": {
    "spacing": 10
  },

  "hyprland/workspaces": {
    "disable-scroll": true,
    "format": "{name}",
    "format-icons": {
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë"
    }
  },

  "custom/power": {
    "format": "‚èª",
    "tooltip": false,
    "on-click": "pgrep -x rofi >/dev/null && pkill rofi; ~/.config/scripts/powermenu.sh" 
  },
  "custom/arch": {
    "format": "ÔåÉ", 
    "tooltip": false,
    "on-click": "pgrep -x rofi >/dev/null && pkill rofi; ~/.config/scripts/rofi.sh" 

  },

  "sway/window": {
    "max-length": 50,
    "format": "ÔåÉ {}"
  },
"custom/cliphist": {
  "format": "ÔÉ™", // Cambiar por √≠cono Nerd Font si lo prefer√≠s
  "tooltip": false,
	"on-click": "pgrep -x rofi >/dev/null && pkill rofi; ~/.config/scripts/portapaples.sh"

},

"pulseaudio": {
  "format": "{icon} {volume}%",
  "format-muted": "Û∞ùü", // icono de mute
  "format-icons": {
    "default": [ "Û∞ñÄ", "Û∞ïæ", "Û∞ïø" ]  // bajo, medio, alto (Nerd Font)
  },
  "on-click": "~/.config/scripts/volumen.sh mute",
  "on-scroll-up": "~/.config/scripts/volumen.sh up",
  "on-scroll-down": "~/.config/scripts/volumen.sh down"
},
"battery": {
  "format": "{icon} {capacity}%",
  "format-charging": "‚ö° {capacity}%",
  "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
},
"custom/notifications": {
  "format": "üîî",
  "tooltip": false,
  "on-click": "dunstctl history-pop"
},
"custom/nm": {
  "exec": "~/.config/scripts/wifi_status.sh",
  "interval": 10,
  "return-type": "json",
  "on-click": "~/.config/scripts/network_toggle.sh toggle",
  "tooltip": true
},
"custom/bluetooth": {
  "exec": "~/.config/scripts/bluetooth_toggle.sh",
  "on-click": "~/.config/scripts/bluetooth_toggle_click.sh",
  "on-click-right": "blueman-manager",
  "interval": 10,
  "return-type": "json",
  "on-click-middle": "bluetoothctl power off", // opcional
  "exec-if": "bluetoothctl list | grep -q ."
},

"custom/screenshot": {
  "format": "ÔÄ∞",
  "tooltip": "Capturar pantalla",
  "on-click": "~/.config/scripts/screenshot.sh"
}


}
